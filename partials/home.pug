mixin template(id, title, direction)
  li.home__item(class=`home__item--${id}`)
    a.home__link(href=`/case/${id}`)
      span.home__link__wrapper=title
        img.home__link__media(alt=`${title} Project Preview` data-direction=direction data-src=`/projects/${id}.jpg`)

section.home
  .home__background
    .home__background__top
    .home__background__bottom

  .home__wrapper
    ul.home__list
      +template('trolli', 'TROLLI', 'right')
      +template('adventure-time', 'ADVENTURE TIME', 'left')
      +template('studio-maertens', 'STUDIO MÆRTENS', 'left')
